name: ShopPlugin
version: 1.2
main: me.yourname.shop.ShopPlugin
api-version: 1.16
description: A Minecraft plugin that adds a shop with buy and sell support
author: YourName
depend: [Vault]

commands:
  shop:
    description: Opens the shop menu with buy/sell options
    usage: /shop
  buy:
    description: Opens the buy-only shop
    usage: /buy
  sell:
    description: Opens the sell-only shop
    usage: /sell
